<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/snippet_editable_checkbox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/note_item_padding_left_right"
        android:paddingRight="@dimen/note_item_padding_left_right">

        <CheckBox
            android:id="@+id/snippet_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/snippet_checkbox_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00000000" />

    </LinearLayout>

</LinearLayout>

